#/bin/bash

get_latest=1

mkdir -p $(dirname $1)

if [! -f $1 ] || [ $get_latest == 1 ]
then
  wget https://raw.githubusercontent.com/ggpwnkthx/coach/master/$1 -O $1
fi
chmod +x $1

clear
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' =
echo "COACH - Cluster Of Arbitrary, Cheap, Hardware"
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' =
echo "Downloading $1"
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' -

$1 "${@:2}"
